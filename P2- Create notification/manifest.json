{
  "name": "SonNguyen",
  "description": "Đây là loạt video hướng dẫn viết chorme extension của Sơn Nguyễn",
  "manifest_version": 2,
  "version": "2.0.0",
  "background": {
    "scripts": ["javascript/background.js"],
    "persistent": false
  },
  "permissions": [
    "notifications"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "It2-team",
	"default_popup": "popup.html"
  },
  "icons": {
    "128": "images/icon-128.png",
    "48": "images/icon-48.png",
    "16":"images/icon-16.png"
  }
}
